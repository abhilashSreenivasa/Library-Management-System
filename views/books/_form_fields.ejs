<div class="form-field">
<label>Title</label>
<input class="form-field-box" type="text" name="title" value=" <%= book.title %>" required>
</div>

<div class="form-field">
<label> Author </label>
<select class="form-field-box" name='author' >
    <% authors.forEach(author=>{ %>
        <% if(author.id==book.id){ %>
        <option label="<%= author.name %>" value="<%=author.id %>" selected>
        <% } else { %>
        <option label="<%=author.name %>" value="<%=author.id%>">
        <%} %>
    <%   })  %>
</select>
</div>

<div class="form-field">
<label>Publish Date</label>
<input class="form-field-box" type="date" name="publishDate" value=" <%= book.publishDate==null ? '':book.publishDate.toISOString().split('T')[0] %>" required>
</div>

<div class="form-field">
    <label>Page Count</label>
    <input class="form-field-box" type="number" name="pageCount" value=" <%= book.pageCount %>" min='1' required>
</div>

<div class="cover">
    <label>Cover</label>
    <input id="cover-box" type="file" name="cover" class="filepond" required>
</div>

<div class="form-field">
    <label>Description</label>
    <textarea class="form-field-box" name='description' required><%=book.description %></textarea>
</div>