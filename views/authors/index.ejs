<h2>All Authors</h2>
<form action="/authors" method="GET">
    <label>Name</label>
    <input type='text' name='name' value ='<%=searchOptions.name %>' >
    <button class="submit-btn" type='submit'>Search</button>
</form>
<br>

<% authors.forEach( author=> { %>
    <div class="authors-name"><%= author.name %></div><br>
    <div class='authors-parent'>
    <div class='authors-button'><a class="authors-link" href="/authors/<%=author.id%>">View</a></div>
    <div class='authors-button'><a class="authors-link" href="/authors/<%=author.id%>/edit">Edit</a></div>
    <%-include("../partials/deleteForm",
    {url: `/authors/${author.id}`}) %>
</div>
    <% }) %>